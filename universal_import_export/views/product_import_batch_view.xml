<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_dynamic_import_batch_form" model="ir.ui.view">
            <field name="name">product.dynamic.import.batch.form</field>
            <field name="model">product.dynamic.import.batch</field>
            <field name="arch" type="xml">
                <form string="Batch product import status Form" create="false" edit="false">
                    <header>
                        <button string="Import Product" type="object" name="import_product_data" class="oe_highlight" attrs="{'invisible':[('state','=','imported')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="inventory_option" readonly="1"/>
                                <field name="consumed_time" readonly="1"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="pending" readonly="1"/>
                                <field name="imported" readonly="1"/>
                                <field name="failed" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="data" string="Data">
                                <field name="data" readonly="1"/>
                            </page>
                            <page name="import_success_ids" string="Imported Products">
                                <field name="import_success_ids" readonly="1">
                                    <tree>
                                        <field name="product_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="import_fail_ids" string="Failed Products">
                                <field name="import_fail_ids" readonly="1">
                                    <tree>
                                        <field name="product_id"/>
                                        <field name="fail_reason"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_product_dynamic_import_batch_tree" model="ir.ui.view">
            <field name="name">product.dynamic.import.batch.tree</field>
            <field name="model">product.dynamic.import.batch</field>
            <field name="arch" type="xml">
                <tree string="Batch product import status Tree" create="false" edit="false">
                    <field name="name"/>
                    <field name="inventory_option"/>
                    <field name="consumed_time"/>
                    <field name="create_date" />
                    <field name="pending" />
                    <field name="imported" />
                    <field name="failed" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <record id="action_view_product_dynamic_import_batch" model="ir.actions.act_window">
            <field name="name">Batch product import status</field>
            <field name="res_model">product.dynamic.import.batch</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_product_dynamic_import_batch_tree"/>
        </record>
        <menuitem id="main_action_view_product_dynamic_import_batch"
            parent="stock.menu_stock_inventory_control"
            name="Batch product import status"
            action="action_view_product_dynamic_import_batch"
            sequence="150"/>
            <!-- groups="import_product_inventory.group_import_product_inventory" -->
    </data>
</odoo>
